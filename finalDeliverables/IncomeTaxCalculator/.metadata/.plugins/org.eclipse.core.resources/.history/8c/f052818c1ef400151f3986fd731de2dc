	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(new CardLayout(0, 0));
// Delete Taxpayer =========================================================================
		deleteTaxpayer();
// Show Main Menu ==========================================================================		
		showMainMenu();
// Load Taxpayer ===========================================================================
		loadTaxpayer();
// Show Taxpayer Info ======================================================================
		showTaxpayerInfo();
// Choose Taxpayer =========================================================================
		chooseTaxpayer();
// Chosen Taxpayer Menu ====================================================================
		chosenTaxpayerMenu();
// Add Receipt =============================================================================
		addReceipt();
// Delete Receipt ==========================================================================
		deleteReceipt();	
// Save Taxpayer ===========================================================================
		saveTaxpayer();
		
	}
	
	
