package inputManager;

import java.util.ArrayList;

import taxpayer.Taxpayer;

public abstract class InputManager {
	private String inputFilePath;
	protected ArrayList<String> bunchOfDataFromInputFile =
			new ArrayList<String>();
	private Taxpayer taxpayerFromFileDataList = new Taxpayer();
	
	public void createTaxpayerFromFileDataList(){
		taxpayerFromFileDataList.initializeTaxpayer(bunchOfDataFromInputFile);
	}
	
	public void setBunchOfDataFromInputFile(
			ArrayList<String> bunchOfDataFromInputFile){
		this.bunchOfDataFromInputFile = bunchOfDataFromInputFile;
	}
	
	public void printFileDataList(){
		System.out.println(bunchOfDataFromInputFile);
	}
	
	public void setInputFilePath(String inputFilePath){
		this.inputFilePath = inputFilePath;
	}
	
	public abstract ArrayList<String> createBunchOfDataFromInputFile(
			String inputFilePath);
}