package outputManager;

import taxpayer.Taxpayer;

public class OutputManager {
	private String domain;
	private ChartCreator chartCreator = new ChartCreator();
	private InfoFileUpdater infoFileUpdater = new InfoFileUpdater();
	private LogFileCreator logFileCreator;
	
	public void createInfoXmlFile(Taxpayer taxp){
		infoFileUpdater.setDomain(domain);
		infoFileUpdater.createInfoXmlFile(taxp);
	}
	
	public void createLogXmlFile(Taxpayer taxp){
		logFileCreator = new LogFileCreator(taxp);
		logFileCreator.setDomain(domain);
		logFileCreator.createLogXmlFile();
	}
	
	public void createInfoTextFile(Taxpayer taxp){
		infoFileUpdater.setDomain(domain);
		infoFileUpdater.createInfoTextFile(taxp);
	}
	
	public void createLogTextFile(Taxpayer taxp){
		logFileCreator = new LogFileCreator(taxp);
		logFileCreator.setDomain(domain);
		logFileCreator.createLogTestFile();
	}
	
	public void createPieChart(Taxpayer taxp){
		chartCreator.createPieChart(taxp);
	}
	
	public void createBarChart(Taxpayer taxp){
		chartCreator.createBarChart(taxp);
	}
	
	public void setDomain(String domain){
		this.domain = domain;
	}
}
